<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddWord">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/linearLayout" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="0dp">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/originalWord" android:layout_weight="1" android:layout_margin="@dimen/fab_margin"
                android:hint="Word"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/translatedWord" android:layout_weight="1" android:layout_margin="@dimen/fab_margin"
                android:hint="Translation"/>
    </LinearLayout>
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/saveWord" android:layout_weight="2"
            android:padding="@dimen/fab_margin" android:layout_margin="@dimen/fab_margin"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginTop="48dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:onClick="saveWord"/>
</android.support.constraint.ConstraintLayout>